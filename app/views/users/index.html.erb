<p id="notice"><%= notice %></p>

<h1>Utilisateurs</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Usermail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.usermail %></td>
        <td><%= link_to 'View profil', user %></td>
        <td><%= link_to 'Edit profil', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

