<p id="notice"><%= notice %></p>

<h1>Utilisateurs</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Usermail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.usermail %></td>
        <td><%= link_to 'View profil', user %></td>
        <% if logged_in? %>
          <% if user == current_user %>
            <td><%= link_to 'Edit profil', edit_user_path(user) %></td>
          <% end %>
          <%if current_user.admin? %>
            <td><%= link_to "Supprimer le profil", user_path(user), method: :delete, data: {confirm: "Etes vous sÃ»r de vouloir supprimer le compte?"} %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

