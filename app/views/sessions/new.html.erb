<h1>Login Alpha blog</h1>

<%= render 'layouts/navigation' %>
<%= form_with(scope: :session, url: login_path) do |form| %>

  <div class="field">
    <%= form.label :mail %>
    <%= form.text_field :usermail %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password_digest %>
  </div>

  <div class="actions">
    <%= form.submit("LogIn") %>
  </div>

  <div>
    <%= link_to 'Log Out', logout_path, method: :delete %>
  </div>

<% end %>
